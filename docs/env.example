# ============================================
# ТОКЕН БОТА (ОБЯЗАТЕЛЬНО)
# Получите токен у @BotFather в Telegram
# ============================================
BOT_TOKEN=ваш_токен_бота_от_BotFather

# ============================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# Эти настройки должны совпадать с docker-compose.yml
# ============================================
DB_HOST=db
DB_PORT=5432
DB_NAME=gigabridge_db
DB_USER=postgres
DB_PASSWORD=210203

# ============================================
# НАСТРОЙКИ 3X-UI API
# URL вашего 3X-UI сервера (например: http://192.168.1.100:2053)
# API ключ находится в настройках панели 3X-UI
# ============================================
HIDDIFY_API_URL=http://ваш_сервер:порт
HIDDIFY_API_KEY=ваш_api_ключ

# ============================================
# НАСТРОЙКИ YOOKASSA (ОПЦИОНАЛЬНО)
# Если используете YooKassa для приема платежей
# Получите эти данные в личном кабинете YooKassa
# ============================================
YOOKASSA_SHOP_ID=ваш_shop_id
YOOKASSA_SECRET_KEY=ваш_secret_key
WEBHOOK_URL=https://ваш_домен/webhook

# ============================================
# НАСТРОЙКИ СКИДОК
# Процент скидки на первую покупку (по умолчанию 20%)
# ============================================
FIRST_PURCHASE_DISCOUNT_PERCENT=20

# ============================================
# ТЕСТОВЫЙ РЕЖИМ
# true - подписки на 1 минуту (для тестирования)
# false - подписки на 30 дней (продакшн)
# ============================================
TEST_MODE=false

# ============================================
# НАСТРОЙКИ REDIS
# Обычно не нужно менять, если используете Docker Compose
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# ПАРОЛЬ ДЛЯ АДМИНСКИХ КОМАНД
# Пароль для команды выдачи безграничной подписки
# ============================================
GRANT_UNLIMITED_PASSWORD=ваш_безопасный_пароль
